@using System.Web.Optimization
<!DOCTYPE html>
<html>
    <head>
        <title>ZUBINRAJ.COM</title>
        
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <meta name="format-detection" content="telephone=no"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
        <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
        <link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
        <link rel="apple-touch-icon" href="~/Content/images/icon.png"/>
        

        @*Add bootstrap here instead of bundling as it has issues with relative path when bundled.*@
        @Styles.Render("//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/css/bootstrap.min.css")
        @Styles.Render("//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/css/bootstrap-theme.min.css")

        @Styles.Render("//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.min.css")

        @Styles.Render("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css")
        @Styles.Render("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/helpers/jquery.fancybox-buttons.css")
        @Styles.Render("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/helpers/jquery.fancybox-thumbs.css")
        
        @Styles.Render("//cdnjs.cloudflare.com/ajax/libs/font-awesome/3.2.1/css/font-awesome.min.css")
@*        @Styles.Render("")
        @Styles.Render("")*@

        @Styles.Render("~/Content/css")
        
        <script type="text/javascript">
            if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
                var msViewportStyle = document.createElement("style");
                var mq = "@@-ms-viewport{width:auto!important}";
                msViewportStyle.appendChild(document.createTextNode(mq));
                document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
            }
        </script>
    </head>
    <body>
        <div id="applicationHost">
            @Html.Partial("_splash")
        </div>
        
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js")
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/knockout/2.3.0/knockout-min.js")
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/1.5.25/jquery.isotope.min.js")
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.0/js/toastr.min.js")
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/jquery.lazyload/1.9.0/jquery.lazyload.min.js")
       
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js")
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/helpers/jquery.fancybox-buttons.js")
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/helpers/jquery.fancybox-media.js")
        @Scripts.Render("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/helpers/jquery.fancybox-thumbs.js")
        
        
        @Scripts.Render("~/Scripts/js")

        @*commented out*@
        @*<script type="text/javascript" src="~/Scripts/require.js" data-main="@Scripts.Url("~/App/main")"></script>*@

        @if (HttpContext.Current.IsDebuggingEnabled)
        {
            <script type="text/javascript" src="~/Scripts/require.js" data-main="@Scripts.Url("~/App/main")"></script>
        }
        else
        {
            <script type="text/javascript" src="~/App/main-built.js"></script>
        }

    </body>
</html>